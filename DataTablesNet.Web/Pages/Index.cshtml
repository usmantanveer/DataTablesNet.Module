@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table id="tblExample">
        <thead>
            <tr>
                <th>Date</th>
                <th>TempratureC</th>
                <th>TempratureF</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>
@section Scripts {
<script type="text/javascript">
    $(function() {
        var table = $("#tblExample").DataTable({
            serverSide: true,
            search: {
                return: true, // Search only triggered on Enter press
            },
            columns: [
                { data: "date" },
                { data: "temperatureC" },
                { data: "temperatureF" },
                { data: "summary" },
            ],
            ajax: {
                url: 'http://misc.quasistellar.com/datatables',
                type: 'POST'
            }
        });

        table.on('search.dt', function(e) {
            console.log('Search triggered.' + e);
        });
    })
</script>
}
