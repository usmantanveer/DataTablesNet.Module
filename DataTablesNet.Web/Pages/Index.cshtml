@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table id="tblExample">
        <thead>
            <tr>
                <th>Date</th>
                <th>TempratureC</th>
                <th>TempratureF</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
@section Scripts {
    <script type="text/javascript">$(function () {
            var table = $("#tblExample").DataTable({
                ordering: true,
                serverSide: true,
                search: {
                    return: true, // Search only triggered on Enter press
                },
                columns: [
                    { name: "Date", data: "date" },
                    { name: "TemperatureC", data: "temperatureC" },
                    { name: "TemperatureF", data: "temperatureF" },
                    { name: "Summary", data: "summary" },
                ],
                ajax: {
                    url: 'https://localhost:5001/datatables',
                    type: 'POST'
                }
            });

            table.on('search.dt', function (e) {
                console.log('Search triggered.' + e);
            });
        })</script>
}
